{
    "name": "unipago/api-sdk-php",
    "description": "SDK de consumo da API do UniPago",
    "keywords": [
        "unipago",
        "api",
        "sdk"
    ],
    "homepage": "https://unipago.com.br",
    "license": "CC-BY-SA-4.0",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Dev SaaS KingHost",
            "email": "dev-servicos@kinghost.com.br",
            "homepage": "http://www.kinghost.com.br/"
        }
    ],
    "support": {
        "email": "dev-servicos@kinghost.com.br",
        "source": "https://github.com/kinghost/UniPago-SDK-PHP",
        "issues": "https://github.com/kinghost/UniPago-SDK-PHP/issues"
    },
    "autoload": {
        "psr-4": {
            "UnipagoApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UnipagoApi\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.6",
        "guzzlehttp/guzzle": "^6.3",
        "league/oauth2-client": "^2.2"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "2.*",
        "phpunit/phpunit": "^6.2"
    },
    "scripts": {
        "doc": "phpdoc -d src -t docs/api --template responsive-twig",
        "test": "phpunit"
    }
}
